                <!--用户姓名-->
                <LinearLayout style="@style/Fill_55_horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="姓        名"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <com.credit.xiaowei.widget.ClearEditText
                        android:id="@+id/et_card_name"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight="3"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="真实姓名"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/global_black_color"
                        android:textColorHint="@color/global_label_color"
                        android:textSize="15sp" />
                </LinearLayout>


                <!--身份证-->
                <LinearLayout style="@style/Fill_55_horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="身  份  证"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <com.credit.xiaowei.widget.ClearEditText
                        android:id="@+id/et_card_number"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="15dp"
                        android:layout_weight="3"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="身份证号码"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/global_black_color"
                        android:textColorHint="@color/global_label_color"
                        android:textSize="15sp" />
                </LinearLayout>
                <!-- 学历 -->
                <LinearLayout
                    style="@style/Fill_55_horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="学        历"
                        android:textColor="@color/tab_normal"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/layout_choose_degree"
                        android:layout_width="0px"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3.5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_degree"
                            android:layout_width="0px"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:hint="选择学历"
                            android:maxLines="1"
                            android:paddingRight="10dp"
                            android:textColor="@color/tab_normal"
                            android:textColorHint="@color/global_label_color"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_enter" />
                    </LinearLayout>

                </LinearLayout>
                <!--现居地址-->
                <LinearLayout
                    style="@style/Fill_55_horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="现居地址"
                        android:textColor="@color/tab_normal"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/layout_choose_home_area"
                        android:layout_width="0px"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3.5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_home_area"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="选择居住地址"
                            android:maxLines="1"
                            android:paddingRight="10dp"
                            android:textColor="@color/tab_normal"
                            android:textColorHint="@color/global_label_color"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_enter" />
                    </LinearLayout>
                </LinearLayout>
                <!--街道和门牌号-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <View
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.credit.xiaowei.widget.ClearEditText
                        android:id="@+id/et_home_address"
                        android:layout_width="0px"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3.5"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="详细街道和门牌号"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingRight="10dp"
                        android:textColor="@color/tab_normal"
                        android:textColorHint="@color/global_label_color"
                        android:textSize="15sp" />
                </LinearLayout>
                <!--婚姻状态-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="婚姻状况"
                        android:textColor="@color/tab_normal"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="(选填)"
                        android:textColor="@color/global_label_color"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/layout_choose_marriage"
                        android:layout_width="0px"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3.5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_marriage"
                            android:layout_width="0px"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:maxLines="1"
                            android:paddingRight="10dp"
                            android:textColor="@color/tab_normal"
                            android:textColorHint="@color/global_label_color"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_enter" />
                    </LinearLayout>

                </LinearLayout>
                <!--居住时长-->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="居住时长"
                        android:textColor="@color/tab_normal"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="(选填)"
                        android:textColor="@color/global_label_color"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:id="@+id/layout_choose_live_time"
                        android:layout_width="0px"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3.5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_live_time"
                            android:layout_width="0px"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:maxLines="1"
                            android:paddingRight="10dp"
                            android:textColor="@color/tab_normal"
                            android:textColorHint="@color/global_label_color"
                            android:textSize="15sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_enter" />

                    </LinearLayout>

                </LinearLayout>

                <include layout="@layout/layout_logo_bottom" />
            </LinearLayout>
        </ScrollView>
    </com.credit.xiaowei.widget.loading.LoadingLayout>

</LinearLayout>
