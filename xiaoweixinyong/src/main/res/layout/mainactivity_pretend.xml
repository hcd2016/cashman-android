<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical"
    app:divider="@drawable/divider_horizontal"
    app:showDividers="middle">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.credit.xiaowei.widget.MyRadioButton
            android:id="@+id/home_tab"
            style="@style/menu_tab"
            android:text="首页"
            app:rbDrawableTop="@drawable/ptd_selector_menu_1"/>

        <com.credit.xiaowei.widget.MyRadioButton
            android:id="@+id/info_tab"
            style="@style/menu_tab"
            android:text="资讯"
            app:rbDrawableTop="@drawable/ptd_selector_menu_2" />
        <com.credit.xiaowei.widget.MyRadioButton
            android:id="@+id/mine_tab"
            style="@style/menu_tab"
            android:text="我的"
            app:rbDrawableTop="@drawable/ptd_selector_menu_3" />
    </RadioGroup>

</android.support.v7.widget.LinearLayoutCompat>

