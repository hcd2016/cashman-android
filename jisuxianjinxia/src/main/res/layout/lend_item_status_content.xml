<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_status_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/home_bg_side"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_loan_tag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_loan_status_time"/>
        <TextView
            android:id="@+id/tv_loan_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/global_black_color"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/theme_line_color"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_status_item_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:background="@mipmap/home_bg_side"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>
